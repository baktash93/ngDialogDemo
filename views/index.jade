doctype html
html
  head
    meta(charset='utf-8')
    title ngDialog
    link(rel='stylesheet', href='/bower/ngDialog/dist/css/theme-default.css', media='screen', title='default theme', charset='utf-8')
    link(rel='stylesheet', href='/public/css/index.css')
    script(src='/bower/angular/angular.js')
    script(src='/bower/ngDialog/ngDialog.js')
    script(src='/public/app.js')
  body(ng-app='app', ng-controller='ctrl')
    base(href="http://localhost:3030")
    header
      a(href="https://github.com/baktash93/ngDialog", target="_blank")
       h1
        span.ng-logo
        | Dialog
   .main
      h3
       | Click on any of the following to display the dialogs
      center
        button(class="btn", href='#', ng-click='showDialog1($event)') Default
        button(class="btn", href='#', ng-click='showDialog2($event)') Window
        button(class="btn", href='#', ng-click='showDialog3($event)') Sticky top
        button(class="btn", href='#', ng-click='showDialog5($event)') Slide right
        button(class="btn", href='#', ng-click='showDialog4($event)') Full-screen overlay
